<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cs18.anabeesh"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".AnabeeshApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.landingpage.LandingPageActivity"
            android:theme="@style/LandingPageTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/login"
            android:parentActivityName=".ui.landingpage.LandingPageActivity"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.landingpage.LandingPageActivity" />
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/create_account"
            android:parentActivityName=".ui.landingpage.LandingPageActivity"
            android:theme="@style/RegisterTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.landingpage.LandingPageActivity" />
        </activity>
    </application>

</manifest>