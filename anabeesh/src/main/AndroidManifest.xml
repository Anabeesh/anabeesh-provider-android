<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cs18.anabeesh"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AnabeeshApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".muhammad.ui.landingpage.LandingPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LandingPageTheme">

        </activity>
        <activity
            android:name=".muhammad.ui.login.LoginActivity"
            android:label="@string/login"
            android:parentActivityName=".muhammad.ui.landingpage.LandingPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".muhammad.ui.landingpage.LandingPageActivity" />
        </activity>
        <activity
            android:name=".muhammad.ui.register.RegisterActivity"
            android:label="@string/create_account"
            android:parentActivityName=".muhammad.ui.landingpage.LandingPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/RegisterTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".muhammad.ui.landingpage.LandingPageActivity" />
        </activity>
        <activity
            android:name=".muhammad.ui.home.HomeActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".salem.ui.interestes.InterestsActivity"
            android:label="@string/intrastes"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".salem.ui.interestes.InterestsActivity" />
        </activity>


    </application>
</manifest>